<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TempDashboardActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/transcation_backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/transcation_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:src="@drawable/back_arrow"
        android:text="Transactions"
        app:fontFamily="@font/dmsans"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/transcation_backarrow"
        android:layout_marginStart="40dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transcation_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/transcation_backarrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:icon="@drawable/ic_baseline_add_24"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_income_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/income"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_fab"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/add_income_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Add Income"
            app:layout_constraintBottom_toBottomOf="@+id/add_income_fab"
            app:layout_constraintEnd_toStartOf="@+id/add_income_fab"
            app:layout_constraintTop_toTopOf="@+id/add_income_fab"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_expense_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/expense"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_income_fab"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/add_expense_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Add Expense"
            app:layout_constraintBottom_toBottomOf="@+id/add_expense_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_expense_fab"
        app:layout_constraintTop_toTopOf="@+id/add_expense_fab"/>

</androidx.constraintlayout.widget.ConstraintLayout>